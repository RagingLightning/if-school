<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Tooltip?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <HBox>
        <Button fx:id="btnDefinition" text=" = " onAction="#handleButton"><tooltip><Tooltip text="Definition" /></tooltip></Button>
        <Button fx:id="btnConcatenation" text=", " onAction="#handleButton"><tooltip><Tooltip text="Concatenation" /></tooltip></Button>
        <Button fx:id="btnTermination" text=";" onAction="#handleButton"><tooltip><Tooltip text="Termination" /></tooltip></Button>
        <Button fx:id="btnOptional" text="[..]" onAction="#handleButton"><tooltip><Tooltip text="Optional" /></tooltip></Button>
        <Button fx:id="btnRepetition" text="{..}" onAction="#handleButton"><tooltip><Tooltip text="Repetition" /></tooltip></Button>
        <Button fx:id="btnGrouping" text="(..)" onAction="#handleButton"><tooltip><Tooltip text="Group" /></tooltip></Button>
        <Button fx:id="btnString1" text="'..'" onAction="#handleButton"><tooltip><Tooltip text="literal String" /></tooltip></Button>
        <Button fx:id="btnString2" text='".."' onAction="#handleButton"><tooltip><Tooltip text="literal String" /></tooltip></Button>
        <Button fx:id="btnComment" text="(* .. *)" onAction="#handleButton"><tooltip><Tooltip text="Comment" /></tooltip></Button>
        <Button fx:id="btnSpecial" text="? .. ?" onAction="#handleButton"><tooltip><Tooltip text="Special" /></tooltip></Button>
        <Button fx:id="btnExclusion" text="-" onAction="#handleButton"><tooltip><Tooltip text="Negation" /></tooltip></Button>
    </HBox>
    <TextArea fx:id="textEbnf"></TextArea>
    <TextArea fx:id="textSearch"></TextArea>
</VBox>